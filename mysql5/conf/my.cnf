[mysqld]
# 数据目录
datadir=/var/lib/mysql

# 默认存储引擎
default-storage-engine=INNODB

# 字符集设置
character_set_server=utf8mb4  # 支持更多字符，适合多语言应用
lower_case_table_names=1       # 表名不区分大小写（适用于Linux）

# 表缓存和连接设置
table_open_cache=128           # 打开表的缓存数量
max_connections=2000           # 最大连接数
max_connect_errors=6000        # 最大连接错误次数

# InnoDB设置
innodb_file_per_table=1        # 每个表使用独立的表空间
innodb_buffer_pool_size=1G     # InnoDB缓冲池大小
max_allowed_packet=64M         # 允许的最大数据包大小
transaction_isolation=READ-COMMITTED  # 事务隔离级别
innodb_flush_method=O_DIRECT    # 直接IO，减少文件系统缓存影响
innodb_lock_wait_timeout=1800   # 锁等待超时（秒）
innodb_flush_log_at_trx_commit=0  # 日志刷新策略
sync_binlog=0                   # 二进制日志同步策略

# 二进制日志设置
server-id=1                     # 服务器ID
log-bin=mysql-bin               # 启用二进制日志
expire_logs_days=2              # 二进制日志过期天数
binlog_format=mixed             # 二进制日志格式

# SQL模式
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# 禁用DNS解析以提高性能
skip-name-resolve

[mysql]
# MySQL客户端默认字符集
default-character-set=utf8mb4

[mysql.server]
# MySQL服务器默认字符集
default-character-set=utf8mb4
